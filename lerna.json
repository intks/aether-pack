{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": "main",
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github",
      "ignoreChanges": [
        "**/*.stories.js",
        "**/*.spec.js",
        "**/*.test.js",
        "**/*.md"
      ]
    }
  }
}
